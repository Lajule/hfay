<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>How fast are you ?</title>
  <style>
    #play-button:disabled { animation: rotate .2s linear infinite; }
    @keyframes rotate { 100% { transform: rotate(360deg); } }
    #results-list li { animation: expand .5s ease-in-out; }
    @keyframes expand { from { transform: scale(0); opacity: 0; } }
  </style>
</head>
<body>
  <form action="" method="get">
    <input type="text" name="uuid" value="{{uuid}}" placeholder="Enter your uuid" required>
    <button type="submit">Save</button>
  </form>
  <button id="play-button" type="button">Click</button>
  <ul id="results-list">
    {{#duration}}<li>{{duration}}ms</li>{{/duration}}
  </ul>
  <script>
    const [cookie, uuid] = document.cookie.match("uuid=([^;]*)");
    const [playButton, resultsList] = document.querySelectorAll("#play-button, #results-list");

    let state = "start";
    let socket = null;

    function initSocket() {
      socket = new WebSocket(`ws://${location.host}/ws`);
      socket.onmessage = function (event) {
        const [status, duration] = event.data.split(":");
        if (status === "started") { state = "stop"; }
        if (status === "stopped") {
          const li = document.createElement("li");
          li.appendChild(document.createTextNode(`${duration}ms`));
          resultsList.insertBefore(li, resultsList.firstChild);
          state = "start";
        }
        playButton.disabled = false;
      };
    }

    window.addEventListener("focus", function () {
      if (socket.readyState === 2 || socket.readyState === 3) { initSocket(); }
    });

    playButton.addEventListener("click", function () {
      socket.send(`${state}:${uuid}`);
      this.disabled = true;
    });

    initSocket();

    setInterval(() => {
      if (socket.readyState === 1) { socket.send(`ping:${uuid}`); }
    }, 3000);
  </script>
</body>
</html>
